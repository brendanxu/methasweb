{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ]
  },
  "Umbraco": {
    "CMS": {
      "Global": {
        "Id": "southpole-railway-umbraco",
        "SanitizeTinyMce": true
      },
      "Content": {
        "AllowEditInvariantFromNonDefault": true,
        "ContentVersionCleanupPolicy": {
          "EnableCleanup": true
        }
      },
      "Unattended": {
        "InstallUnattended": true,
        "UnattendedUserName": "admin@southpole.com",
        "UnattendedUserEmail": "admin@southpole.com",
        "UnattendedUserPassword": "SouthPole2024!Railway"
      },
      "Security": {
        "AllowConcurrentLogins": false,
        "AuthCookieSecure": true,
        "RequireHttps": true
      },
      "DeliveryApi": {
        "Enabled": true,
        "PublicAccess": true,
        "ApiKey": "southpole-railway-api-key-2024",
        "DisallowedContentTypeAliases": [],
        "RichTextOutputAsJson": false
      },
      "Hosting": {
        "Debug": false
      },
      "Runtime": {
        "Mode": "Production"
      }
    }
  },
  "ConnectionStrings": {
    "umbracoDbDSN": "Data Source=/app/data/Umbraco.sqlite.db;Cache=Shared;Foreign Keys=True;Pooling=True",
    "umbracoDbDSN_ProviderName": "Microsoft.Data.Sqlite"
  },
  "AllowedHosts": "*"
}