{
  "name": "main-site",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3001 --turbopack",
    "build": "rm -rf .next/cache && rm -rf cache && next build --no-cache && rm -rf .next/cache && rm -rf cache",
    "start": "next start --port 3000",
    "lint": "next lint --max-warnings 0",
    "check-types": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "test": "echo \"Tests not yet implemented\" && exit 0",
    "analyze": "ANALYZE=true npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "start:prod": "NODE_ENV=production npm run start",
    "docker:build": "docker build -t southpole-main-site .",
    "docker:run": "docker run -p 3000:3000 southpole-main-site",
    "deploy:staging": "../scripts/deploy.sh staging",
    "deploy:production": "../scripts/deploy.sh production"
  },
  "dependencies": {
    "@repo/ui": "*",
    "next": "^15.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.3.0",
    "@repo/eslint-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@tailwindcss/postcss": "^4.1.5",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.30.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.5",
    "typescript": "5.8.2"
  }
}
